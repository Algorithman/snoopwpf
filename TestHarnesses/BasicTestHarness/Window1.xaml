<Window
	x:Class="BasicTestHarness.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Window1"
	Height="300"
	Width="300"
>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock
			Text="Hello World"
			FontSize="48"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
		/>
		<Button Width="200" Height="50" Margin="10" Content="Click to throw exception" Click="ExceptionButton_Click"/>
		<Button Width="200" Height="50" Margin="10" Content="Click to create binding error" Click="BindingErrorButton_Click"/>
        <CheckBox Content="ThreeState" IsThreeState="True" />
        <TextBlock Background="{DynamicResource MissingDynamicResource}">Missing DynamicResource</TextBlock>

		<TextBlock x:Name="textBlockForBindingError" Width="100" Height="18" Background="Red" />
	</StackPanel>
</Window>
